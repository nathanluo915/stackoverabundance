<% if @user.errors.any?  %>
  <ul>
  <% @user.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
<% end %>

<h1> Sign up for Stack Overabundance! </h1>

<%= form_for @user do |f| %>

<div>
  <%= f.label :username %>
  <%= f.text_field :username %>
</div>

<div>
  <%= f.label :email %>
  <%= f.email_field :email %>
</div>

<div>
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>

<div>
  <%= f.submit %>
</div>

<% end %>

<p> Already have an account? <%= link_to 'Sign in', login_path %>